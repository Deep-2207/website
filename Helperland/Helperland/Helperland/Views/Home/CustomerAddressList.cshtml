@model IEnumerable<UserAddress>

@{
    Layout = null;
}

@if (Model.Any())
{
    <script type="text/javascript">

        $("#btnaddressbookservice").removeClass("disabled");
    </script>
    @foreach (UserAddress address in Model)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" name="UserAddress" id="@address.AddressId"
                   value="option1" checked>
            <label class="form-check-label" for="@address.AddressId">
                <p class="d-block m-0">
                    <span class="point fw-bold">Address: </span>
                    @address.AddressLine1 @address.AddressLine2 @address.City @address.PostalCode
                </p>

                <p class="d-block m-0"> <span class="point fw-bold">Phone number: </span>@address.Mobile</p>
            </label>

        </div>
    }
}
else
{

    <div class="alert alert-danger" id="EmptyAddress" role="alert">
        You Don't have a added any Address yet....!!
    </div>
  
    <script type="text/javascript">
        alert("under");
        $("#btnaddressbookservice").addClass("disabled");
    </script>

}
