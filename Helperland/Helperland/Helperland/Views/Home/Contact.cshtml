
@{
    ViewData["Title"] = "Contect-Us Page";
}


<section class="first-img">
    <img src="~/img/prices/group-16_2.png" alt="">
</section>

<!-- contect-us start -->
<section class="contact-us" id="contact-us">
    <div class="max-width-1140 border-b-1">
        <div class="row justify-content-center text-center">
            <div class="col-12 mb-5" style="position: relative;">
                <h2 class="headding-star">Contact us</h2>
            </div>
        </div>


        <div class="contact-img d-flex justify-content-around align-items-center m-50">
            <div class="box">
                <div class="img-box">
                    <img src="~/img/contect_us//forma-1_2.png" alt="">
                </div>
                <div class="text-box text-center mt-3">
                    1111 Lorem ipsum text 100, <br> Lorem ipsum AB
                </div>
            </div>
            <div class="box">
                <div class="img-box">
                    <img src="~/img/contect_us//phone-call.png" alt="">
                </div>
                <div class="text-box text-center mt-3">
                    +49 (40) 123 36 7890 <br>
                    +49 (40) 123 36 7890
                </div>
            </div>
            <div class="box">
                <div class="img-box" style="width: 61px;">
                    <img src="~/img/contect_us//vector-smart-object.png" alt="">
                </div>
                <div class="text-box text-center mt-3">
                    info@helperland.com
                </div>
            </div>
        </div>




    </div>
</section>


<section class="touch-us" id="touch-us">
    <div class="max-width-614">
        <div class="touch-headding text-center">
            Get in touch with us
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-0">

            <div class="col">
                <input type="text" class="form-control" placeholder="First name" aria-label="First name">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Last name" aria-label="Last name">
            </div>

        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-0">

            <div class="col">

                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">+49</div>
                    </div>
                    <input type="text" class="form-control" id="inlineFormInputGroupmobilenumber" placeholder="Mobile Number">
                </div>
            </div>
            <div class="col">
                <input type="email" class="form-control" placeholder="Email Address" aria-label="Email Address">

            </div>

        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-0">
            <div class="col-md-12">

                <select class="form-select" aria-label="Default select example">
                    <option value="" hidden>-- Please Select Subject --</option>
                    <option value="General">
                        General
                    </option>
                    <option value="Inquiry">
                        Inquiry
                    </option>
                    <option value="Renewal">
                        Renewal
                    </option>
                    <option value="Revocation">
                        Revocation
                    </option>
                </select>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-0">
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px; width: 100%;"></textarea>
                    <label for="floatingTextarea2" style="color: #6c757d;">Message</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-0">
            <div>
                <label class="form-label attchment">Attchment</label>

                <label class="upload" for="formFileLg">Upload</label>
                <input class="form-control-lg d-none" id="formFileLg" type="file" placeholder="Upload">
                <label id="filename"></label>
            </div>
        </div>

        <div class="text-center mt-17">
            <button type="submit" class="btn btn-primary text-center submit-btn">Submit</button>
        </div>

    </div>
</section>


<!-- Map -->
<section class="contact-us-map mb-3" id="contact-us-map">
    <div class="pin d-flex justify-content-center align-items-center h-100">
        @*<img src="~/img/contect_us/pin.png" alt="">*@
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2525.274682710308!2d7.130329051387604!3d50.73339407941482!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47bee13f0afebfb1%3A0x7caeb94f4c1042fc!2sK%C3%B6nigswinterer%20Str.%20116%2C%2053227%20Bonn%2C%20Germany!5e0!3m2!1sen!2sin!4v1643083702948!5m2!1sen!2sin" width="1560" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
</section>
